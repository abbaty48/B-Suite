{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": ".",
    // "outDir": ".app",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      // GLOBAL
      "@": ["./*"],
      // MAIN APP
      "@main/*": ["app-main/*"],
      "@main-ipcs/*": ["app-main/ipcs/*"],
      "@main/libs/*": ["app-main/libs/*"],
      // UI
      "@ui/*": ["app-ui/*"],
      "@ui-pages/*": ["app-ui/pages/*"],
      "@ui-hooks/*": ["app-ui/hooks/*"],
      "@ui-assets/*": ["app-ui/assets/*"],
      "@ui-commons/*": ["app-ui/commons/*"],
      "@ui-svgs/*": ["app-ui/assets/svgs/*"],
      "@ui-images/*": ["app-ui/assets/images/*"],
      "@ui-styles/*": ["app-ui/assets/styles/*"],
      "@ui-themes/*": ["app-ui/assets/themes/*"],
      "@ui-components/*": ["app-ui/components/*"],
      // SERVER
      "@server/*": ["app-server/*"],
      "@server-models/*": ["app-server/src/models/*"],
      "@server-commons/*": ["app-server/src/commons/*"],
      "@server-services/*": ["app-server/src/services/*"],
      "@server-resolvers/*": ["app-server/src/resolvers/*"],
      "@server-directives/*": ["app-server/src/directives/*"],
      "@server-controllers/*": ["app-server/src/controllers/*"],
      "@server-databases/*": ["app-server/src/models/databases/*"],
    },
    "plugins": [
      {"transform": "typescript-transform-paths"},
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      },
    ],
  },
  "include": ["./*", "app-ui/**/*", "app-server/**/*", "app-main/**/*"]
}
